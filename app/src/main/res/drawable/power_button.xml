<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 按壓時 -->
    <item android:state_pressed="true">
        <!--rectangle 長方形 可以畫出直角形，圓角形，弧形等-->
        <shape android:shape="rectangle">
            <!--設定圓角，當設置的圓角半徑很大，就可變成弧形邊了-->
            <corners android:radius="15dp" />
            <!--邊框-->
            <stroke android:width="2dp" android:color="#2196F3" />
            <!--漸層顏色-->
            <gradient android:angle="-90" android:endColor="#5266D3" android:startColor="#E91E63" />
        </shape>
    </item>

    <!-- 預設時 -->
    <item >
        <shape android:shape="rectangle">
            <corners android:radius="15dip" />
            <stroke android:width="1dip" android:color="#2196F3" />
            <gradient android:angle="-90" android:endColor="#DFA5B9" android:startColor="#FF021E" />
        </shape>
    </item>

</selector>

